{
  "hooks": {
    "SessionStart": [{
      "matcher": "*",
      "hooks": [{ "type": "command", "command": "~/.local/bin/rehoboam hook", "timeout": 5 }]
    }],
    "UserPromptSubmit": [{
      "matcher": "",
      "hooks": [{ "type": "command", "command": "~/.local/bin/rehoboam hook", "timeout": 5 }]
    }],
    "PermissionRequest": [{
      "matcher": "",
      "hooks": [{ "type": "command", "command": "~/.local/bin/rehoboam hook -N", "timeout": 10 }]
    }],
    "Stop": [{
      "matcher": "",
      "hooks": [{ "type": "command", "command": "~/.local/bin/rehoboam hook -N", "timeout": 10 }]
    }],
    "Notification": [{
      "matcher": "",
      "hooks": [{ "type": "command", "command": "~/.local/bin/rehoboam hook -N", "timeout": 5 }]
    }],
    "PreToolUse": [{
      "matcher": "",
      "hooks": [{ "type": "command", "command": "~/.local/bin/rehoboam hook", "timeout": 10 }]
    }],
    "PostToolUse": [{
      "matcher": "",
      "hooks": [{ "type": "command", "command": "~/.local/bin/rehoboam hook", "timeout": 10 }]
    }],
    "SessionEnd": [{
      "matcher": "*",
      "hooks": [{ "type": "command", "command": "~/.local/bin/rehoboam hook", "timeout": 5 }]
    }],
    "PreCompact": [{
      "matcher": "*",
      "hooks": [{ "type": "command", "command": "~/.local/bin/rehoboam hook", "timeout": 10 }]
    }],
    "PostCompact": [{
      "matcher": "*",
      "hooks": [{ "type": "command", "command": "~/.local/bin/rehoboam hook", "timeout": 5 }]
    }],
    "SubagentStart": [{
      "matcher": "*",
      "hooks": [{ "type": "command", "command": "~/.local/bin/rehoboam hook", "timeout": 5 }]
    }],
    "SubagentStop": [{
      "matcher": "*",
      "hooks": [{ "type": "command", "command": "~/.local/bin/rehoboam hook", "timeout": 5 }]
    }]
  }
}
