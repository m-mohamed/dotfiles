# EditorConfig - Consistent coding style across editors
# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false  # Allow double-space for line breaks in markdown

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.sh]
indent_size = 2

[*.zsh]
indent_size = 2
